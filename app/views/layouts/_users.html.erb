<div class="open" style="<%= show_if_opened(status) %>">
  <% if User.count > 0 %>
    <% for user in User.find(:all, :order => "login ASC") %>
      <a href="<%= user_path(user) %>" class="menu_link <%= active_link_class(user) %>" title="<%= user.login %>">
        <div class="menu_link_title">
          <%= user.login %>
        </div>
      </a>
    <% end %>
  <% else %>
    <div class="menu_item">No user created yet</div>
    <a href="<%= new_user_path %>" class="menu_link  menu_link_create">
      <div class="menu_link_title">
        New user
      </div>
    </a>
  <% end %>
</div>
<div class="closed" style="<%= show_if_closed(status) %>">
  <div class="menu_link_title">
    <%= pluralize(User.count, 'user')%>
  </div>
</div>
